header(class='pos(fixed) z(9999) t(0) w(100%) h(5) bg-c(white) bs(1)')
    div(class='container h(5) d(f) ai(c) jc(sb)')
        a(href='/' title='Elassus' class='td(n) d(f) ai(c)')
            img(src='/img/logo.svg' class='pos(relative) w(4) h(4)')
            span(class='h3 fw(200) c(black) m-y(0) m-l(2) d(n) d(i)s') Elassus

        nav
            ul(class='ls(n) d(f) h(5)')
                each url, name in { Docs: '/docs.html', Reference: '/reference.html', GitHub: 'https://github.com/krivaten/elassus' }
                    li(class='h(5)')
                        -var current = currentUrl === url ? 'bg-c(gray-l2)' : '';
                        a(href=url class='p-x(2) p-x(3)s d(f) ai(c) h(5) td(n) bg-c(gray-l2):h ' + current) !{name}
